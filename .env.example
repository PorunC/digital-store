# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_DOMAIN=yourdomain.com
BOT_WEBHOOK_PATH=/webhook

# Admin Configuration
ADMIN_IDS=123456789,987654321
DEVELOPER_ID=123456789

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/store.db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Payment Gateway Configuration
TELEGRAM_STARS_ENABLED=true
CRYPTOMUS_ENABLED=false
CRYPTOMUS_API_KEY=your_cryptomus_api_key
CRYPTOMUS_MERCHANT_ID=your_cryptomus_merchant_id

# Business Configuration
DEFAULT_CURRENCY=RUB
TRIAL_ENABLED=true
TRIAL_DURATION_DAYS=3
REFERRAL_ENABLED=true
REFERRAL_REWARD_DAYS=7

# File Paths
DATA_DIR=./data
PRODUCTS_FILE=./data/products.json
LOCALES_DIR=./locales

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s